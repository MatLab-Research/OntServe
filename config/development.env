# OntServe Development Environment Configuration
# Copy this file to .env in the project root or set environment variables

# =============================================================================
# Environment Settings
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
ENVIRONMENT=development

# =============================================================================
# Security
# =============================================================================
# IMPORTANT: Generate a secure key for production using:
# python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
ONTSERVE_DB_URL=postgresql://postgres:PASS@localhost:5432/ontserve

# Connection pool settings
ONTSERVE_MAX_CONNECTIONS=10
ONTSERVE_QUERY_TIMEOUT=30

# Vector search (requires pgvector extension)
ONTSERVE_ENABLE_VECTOR_SEARCH=true

# =============================================================================
# MCP Server Configuration
# =============================================================================
ONTSERVE_MCP_PORT=8082
ONTSERVE_HOST=0.0.0.0
ONTSERVE_DEBUG=true

# =============================================================================
# Web Application Configuration
# =============================================================================
ONTSERVE_WEB_PORT=5003
ONTSERVE_WEB_HOST=0.0.0.0

# =============================================================================
# Ontology Storage
# =============================================================================
# Path to ontology files (relative to project root)
ONTOLOGY_STORAGE_PATH=ontologies

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ONTOLOGY_EDITOR=true
ENABLE_CONCEPT_SUBMISSION=true
ENABLE_SPARQL_ENDPOINT=true

# =============================================================================
# ProEthica Integration
# =============================================================================
# Default domain for ProEthica concepts
DEFAULT_DOMAIN=engineering-ethics

# =============================================================================
# Development Tools
# =============================================================================
# Enable Flask debug toolbar
FLASK_DEBUG_TOOLBAR=false

# Enable SQL query logging
SQLALCHEMY_ECHO=false

# Enable RDFLib verbose logging
RDFLIB_DEBUG=false
