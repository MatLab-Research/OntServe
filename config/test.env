# OntServe Test Environment Configuration
# Used for automated testing

# =============================================================================
# Environment Settings
# =============================================================================
FLASK_ENV=testing
FLASK_DEBUG=0
ENVIRONMENT=test
TESTING=true

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=test-secret-key-not-for-production

# =============================================================================
# Database Configuration
# =============================================================================
# Use separate test database to avoid affecting development data
ONTSERVE_DB_URL=postgresql://postgres:PASS@localhost:5432/ontserve_test

# Smaller pool for testing
ONTSERVE_MAX_CONNECTIONS=5
ONTSERVE_QUERY_TIMEOUT=10

# Vector search
ONTSERVE_ENABLE_VECTOR_SEARCH=true

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Use different ports to avoid conflicts with development servers
ONTSERVE_MCP_PORT=8083
ONTSERVE_HOST=127.0.0.1
ONTSERVE_DEBUG=false

# =============================================================================
# Web Application Configuration
# =============================================================================
ONTSERVE_WEB_PORT=5004
ONTSERVE_WEB_HOST=127.0.0.1

# =============================================================================
# Ontology Storage
# =============================================================================
# Use test ontology directory
ONTOLOGY_STORAGE_PATH=tests/fixtures/ontologies

# =============================================================================
# Logging
# =============================================================================
# Minimal logging during tests
LOG_LEVEL=ERROR
LOG_FORMAT=%(levelname)s - %(message)s

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ONTOLOGY_EDITOR=true
ENABLE_CONCEPT_SUBMISSION=true
ENABLE_SPARQL_ENDPOINT=true

# =============================================================================
# ProEthica Integration
# =============================================================================
DEFAULT_DOMAIN=engineering-ethics

# =============================================================================
# Testing Configuration
# =============================================================================
# Disable external API calls during testing
MOCK_EXTERNAL_APIS=true

# Use in-memory cache for tests
USE_MEMORY_CACHE=true

# Disable email sending in tests
DISABLE_EMAIL=true

# Speed up password hashing for tests
BCRYPT_LOG_ROUNDS=4

# SQLAlchemy settings for testing
SQLALCHEMY_ECHO=false
SQLALCHEMY_TRACK_MODIFICATIONS=false
